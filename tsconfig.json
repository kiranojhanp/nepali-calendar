{
	"include": ["src/**/*"],
	"exclude": ["node_modules/*"],
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es2017",
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"sourceMap": true,
		"types": ["node", "jest"],
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"src": ["src/*"]
		}
	}
}
